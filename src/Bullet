import java.awt.*;

public class Bullet implements Entity {

    public static final int BULLET_WIDTH = 40;
    public static final int BULLET_HEIGHT = 10;

    private Game game;
    private int x;
    private int y;
    private double vX;
    private double vY;
    private int id; // 1 = player, 2 = paddle
    private Handler handler;

    public Bullet(Game game, Handler handler, int x, int y, double vX, double vY, int id) {
        this.game = game;
        this.handler = handler;
        this.x = x;
        this.y = y;
        this.vX = vX;
        this.vY = vY;
        this.id = id;
    }

    public void update() {
        x += vX;
        y += vY;

        checkCollision();
    }


    public void paint(Graphics g) {
        if(id == 1) {
            g.setColor(Color.green);
        }
        else {
            g.setColor(Color.red);
        }

        g.fillRoundRect(x, y, BULLET_WIDTH, BULLET_HEIGHT, 10, 10);
    }

    public void checkCollision() {
        for(Entity e : handler.getEntities()) {

            if(e instanceof Bullet) {

                if(((Bullet) e).getID() != id) {

                    if(((Bullet) e).getBounds().intersects(getBounds())) {
                        handler.remove(e);
                        handler.remove(this);
                    }
                }
            }

            if(e instanceof PlayerBall) {

                if(id == 2 && ((PlayerBall) e).getBounds().intersects(getBounds())) {
                    ((PlayerBall) e).setHealth(((PlayerBall) e).getHealth() - 5);
                }
            }
        }

        if(x < 0 - BULLET_WIDTH || x > Game.WIDTH || y < 0 - BULLET_HEIGHT || y > Game.HEIGHT) {
            handler.remove(this);
        }
    }

    public Rectangle getBounds() {
        return new Rectangle(x, y, BULLET_WIDTH, BULLET_HEIGHT);
    }

    public int getID() {
        return id;
    }
}

